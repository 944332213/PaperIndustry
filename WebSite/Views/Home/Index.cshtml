@section scripts{
    <script src="/scripts/effect/carousel/slider.js"></script>
    <script>
        $(function () {
            if ($(".slider-container").length > 0) {
                $(".slider-container").ikSlider({
                    delay: 5000,
                    speed: 300
                });
            }

            $(".page").filter(function () {
                return $(this).find(".pic-module").length > 0;
            }).on("mouseenter", ".list",
                function () {
                    $(this).find(".new-module").fadeIn();
                }).on("mouseleave", ".list",
                function () {
                    $(this).find(".new-module").fadeOut();
                });

            $(".left_bg dl").hide();

            $(".left_bg nav ul li a").bind("click", function () {

                $(this).parent().find("dl").slideToggle();

                $(this).parent().siblings().find("dl").slideUp();

            });

        })
    </script>
}